/****************************************
		Shared workbook styles
****************************************/
#workbook {
	min-width: 400px;
	height: 100%;
	overflow-y: scroll;
	overflow-x: hidden;
	position: relative;
}
#content {
	font-family: Arial Rounded MT Bold;
	color: #2f2f2f;
	margin: 0 auto;	
	margin-top: 50px;
	padding: 30px;
	max-width: 900px;
	background: #fff;
	box-shadow: 0px 0px 20px 4px rgba(0, 0, 0, 0.2);
	-moz-border-radius: 3px;
	border-radius: 3px;
}
#workbook_tools {
	width: 250px;
	height: 40px;
	position: absolute;
	top: 25px;
	right: 5px;
	display: inline-block;
	color: #222;
	font-family: Arial Rounded MT Bold, Nunito;
	font-size: 10px;
}
#content h1 {
	font-size: 50px;
	text-align: center;
	font-family: Helvetica;
	margin: 0px;
}
#content h2 {
	font-size: 20px;
	text-align: center;
	font-family: Helvetica;
	margin: 0px;
	margin-bottom: 10px;
}
#content h3 {
	text-align: center;
	margin: 0px;
	font-size: 15px;
	font-weight: bold;
	margin-top: 5px;
	font-family: Nunito;
	color: #000;
}
#content h4 {
	font-size: 17px;
	text-align: left;
	margin: 0px;
	font-style: italic;
	margin-top: 5px;
	font-family: Nunito;
	color: #000;
}
#content ol {
	list-style-image: url(<%= image_path 'workspace/bullet_point.png' %>);
}
#content ol ul {
	list-style-image: none;
	list-style-type: disc;
	margin-top: 20px;
	overflow: hidden;
}
#content label {
	font-family: Nunito;
	color: #444;
}
#content ol > li {
	margin-bottom: 80px;
	clear: both;
	position: relative;
}
#content ol > li label img{
	float: right;
}
#content ol > .pre-question {
	margin-bottom: 30px;
	list-style-image: none;
	list-style-type: none;
	font-family: Nunito;
}
#content ol li table {
	margin-bottom: 10px;
	margin-left: 20px;
	margin-top: 20px;
	font-family: Nunito;
}
#content ul li {
	margin-bottom: 10px;
	position: relative;
}
#content textarea {
	border: 1px solid #999;
	-moz-border-radius: 5px;
	border-radius: 5px;
	margin-top: 20px;
	padding: 10px;
	background-image: -webkit-linear-gradient(top, #eaeaea, #ffffff); 
}
#content input {
	border: 1px solid #999;
	-moz-border-radius: 5px;
	border-radius: 5px;
	height: 28px;
	min-width: 100px;
	max-width: 500px;
	padding-left: 10px;
	background-image: -webkit-linear-gradient(top, #eaeaea, #ffffff);  
}
input:focus, textarea:focus {
	outline: rgba(0, 0, 0, 0.2) outset 3px;
}
#with_border {
	border-collapse: collapse;
}
td {
	padding: 20px;
}
#with_border td {
	border: 1px solid #999;
	text-align: center;
}
#with_border td input {
	border: none;
	background: none;
	width: 100%;
	height: 100%;
	padding: 10px;
	outline: none;
}
.feedback {
	width: 100%;
	height: 50px;
	display: inline-block;
	clear: float;
	position: relative;
}
.feedback_txt {
	height: 50px;
	border: 1px dashed #333;
	display: inline-block;
	font-size: 12px;
	font-weight: normal;
	color: #333;
	padding: 10px;
	background-image: -webkit-linear-gradient(top, #F9F3CA, #ffffff);
	-moz-border-radius: 5px;
	border-radius: 5px;
}
.feedback_editor {
	height: 45px;
	width: 80%;
	border: 1px solid #999;
	-moz-border-radius: 5px;
	border-radius: 5px;
	background: #eaeaea;
	position: relative;
}
.feedback_editor .feedback_buttons{
	width: 300px;
	vertical-align: top;
	position: relative;
	z-index: 2;
	width: 140px;
	margin-top: 3px;
}
.feedback img {
	vertical-align: middle;
	display: inline-block;
	margin-left: 5px;
}
#content .feedback_txt {
	position: absolute;
	top: 5px;
	right: 5px;
	height: 15px;
	width: 75%;
	margin: 0px;
	text-align: center;
}
.feedback_editor .feedback_editor_text {
	float: right;
	font-size: 10px;
	color: #555;
	padding: 15px;
	margin: 0px;
	border: none;
	background: none;
	width: 300px;
	text-align: right;	
}
#lesson_select {
	position: absolute;
	top: 20px;
	left: -15px;
	width: 130px;
	height: 30px;
	border: 1px solid red;
}
.ptc {
	border: 1px solid #222;
}
.ptc_head {
	background: #222;
	padding: 6px;
	color: #eee;
}
#content .ptc ol > li {
	margin-bottom: 15px;
	margin-left: 20px;
	margin-right: 25px;
	clear: both;
	position: relative;
}
