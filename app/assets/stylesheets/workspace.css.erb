body {
	margin: 0px;
}
#head {
	width: 100%;
	background: #ACA0DE url(<%= image_path 'head_shadow.png' %>) repeat-x bottom;
	height: 60px;
	border-bottom: 2px solid #9E81CB;
}
#topnav {
	width: 100%;
	height: 60px;
	position: absolute;
	top: 0px;
}
#logo {
	width: 375px;
	height: 55px;
	background: url(<%= image_path 'logo.png' %>) no-repeat center;
	position: absolute;
	top: 0px;
	left: 0px;
}
#buttons {
	position: absolute;
	top: 4px;
	right: 10px;
}
#nav {
	width: 310px;
	height: 60px;
	margin: 0 auto;
}
.nav_option {
	width: 100px;
	padding-top: 20px;
	height: 40px;
	vertical-align: center;
	display: inline-block;
	font-family: Arial Rounded MT Bold;
	color: #583083;
	text-align: center;
	text-decoration: none;
}
.nav_option:hover {
	background: rgba(0, 0, 0, 0.05);
}
#workspace {
	width: 100%;
	height: 100%;
	position: relative;
	background: #E6EDF7 url(<%= image_path 'workspace/workbook_shadow.png' %>) no-repeat center top;
	border-top: 1px solid #fff;
}
.full_width {
	max-width: 100%;
}
.half_width {
	max-width: 50%;
}
.float_left {
	float: left;
}
.float_right {
	float: right;
}
.clear_float {
	clear: both;
}
/****************************************
			Planning view
****************************************/
#lessonplan {
	max-width: 50%;
	min-width: 400px;
	float: left;
	position: relative;
	height: 100%;
	overflow-y:scroll;
}
#lessons {
	margin: 20px;
	background: #fff url(<%= image_path 'workspace/lesson_plan_bg.png' %>) no-repeat top left;
	box-shadow: 0px 0px 20px 4px rgba(0, 0, 0, 0.2);
	-moz-border-radius: 3px;
	border-radius: 3px;
	padding: 20px;
}
#lessonplans {
	margin-right: 50px;
	margin-left: 50px;
	margin-top: 60px;
	font-family: nunito;
	color: #444;
}
#lessonplans #unitnumber {
	position: absolute;
	top: 65px;
	right: 40px;
	color: #222;
}
#lessonplans h2 {
	color: #333;
	margin: 0px;
	font-family: Helvetica;
}
#lessonplans h3 {
	color: #333;
	text-decoration: underline;
	margin: 0px;
	font-family: Helvetica;
}
#lessonplans ul {
	color: #555;
}
#lessonplans h4 {
	color: #2b2b2b;
}
#lessonplans .items {
	font-size: .8em;
}
#lessonplans .highlight {
	margin: 10px;
	padding: 10px;
	background: #F7F2D5;
}
#lessonplans .subtitle {
	font-size: 1em;
	display: block;
	color: purple;
}
/****************************************
			Grading view
****************************************/
#selectMenu {
	position: absolute;
	right: 40px;
	top: 40px;
}
#student_workbook, #teacher_guide_workbook {
	min-width: 400px;
	height: 100%;
	overflow-y: scroll;
	position: relative;
}
#student_workbook {
	margin: 0px 20px 20px 20px;
	padding: 0px 15px;
}
#grading_area {
	min-width: 400px;
	position: relative;
	height: 100%;
}
#student_search {
	width: 282px;
	height: 60px;
	background: url(<%= image_path 'workspace/grading_search.png' %>) no-repeat center;
	position: absolute;
	top: 0px;
	right: 20px;
	z-index: 2;
}
#arrow_right {
	width: 76px;
	height: 122px;
	background: url(<%= image_path 'workspace/arrow_right.png' %>) no-repeat center;
	position: absolute;
	z-index: 2;
	top: 50%;
	right: 20px;
	margin-top: -66px;
}
#arrow_left {
	width: 76px;
	height: 122px;
	background: url(<%= image_path 'workspace/arrow_left.png' %>) no-repeat center;
	position: absolute;
	z-index: 2;
	top: 50%;
	left: 0px;
	margin-top: -66px;
}
#student_search #student_select {
	position: absolute;
	top: 15px;
	right: 20px;
}
#student_search #lesson_select {
	position: absolute;
	top: 15px;
	left: 20px;
}

/****************************************
		Shared workbook styles
****************************************/
#workbook {
	min-width: 400px;
	height: 100%;
	overflow-y: scroll;
	overflow-x: hidden;
	position: relative;
}
#content {
	font-family: Arial Rounded MT Bold;
	color: #2f2f2f;
	margin: 0 auto;	
	margin-top: 50px;
	padding: 30px;
	max-width: 60%;
	background: #fff;
	box-shadow: 0px 0px 20px 4px rgba(0, 0, 0, 0.2);
	-moz-border-radius: 3px;
	border-radius: 3px;
}
#workbook_tools {
	width: 250px;
	height: 40px;
	position: absolute;
	top: 25px;
	right: 5px;
	display: inline-block;
	color: #222;
	font-family: Arial Rounded MT Bold, Nunito;
	font-size: 10px;
}
#content h1 {
	font-size: 50px;
	text-align: center;
	font-family: Helvetica;
	margin: 0px;
}
#content h2 {
	font-size: 20px;
	text-align: center;
	font-family: Helvetica;
	margin: 0px;
	margin-bottom: 10px;
}
#content h3 {
	text-align: center;
	margin: 0px;
	font-size: 15px;
	font-weight: bold;
	margin-top: 5px;
	font-family: Nunito;
	color: #000;
}
#content h4 {
	font-size: 17px;
	text-align: left;
	margin: 0px;
	font-style: italic;
	margin-top: 5px;
	font-family: Nunito;
	color: #000;
}
#content ol {
	list-style-image: url(<%= image_path 'workspace/bullet_point.png' %>);
}
#content ol ul {
	list-style-image: none;
	list-style-type: disc;
	margin-top: 20px;
	overflow: hidden;
}
#content label {
	font-family: Nunito;
	color: #444;
}
#content ol > li {
	margin-bottom: 80px;
	clear: both;
	position: relative;
}
#content ol > li label img{
	float: right;
}
#content ol > .pre-question {
	margin-bottom: 30px;
	list-style-image: none;
	list-style-type: none;
	font-family: Nunito;
}
#content ol li table {
	margin-bottom: 10px;
	margin-left: 20px;
	margin-top: 20px;
	font-family: Nunito;
}
#content ul li {
	margin-bottom: 10px;
	position: relative;
}
#content textarea {
	border: 1px solid #999;
	-moz-border-radius: 5px;
	border-radius: 5px;
	margin-top: 20px;
	padding: 10px;
	background-image: -webkit-linear-gradient(top, #eaeaea, #ffffff); 
}
#content input {
	border: 1px solid #999;
	-moz-border-radius: 5px;
	border-radius: 5px;
	height: 28px;
	width: 200px;
	padding: 10px;
	background-image: -webkit-linear-gradient(top, #eaeaea, #ffffff); 
}
input:focus, textarea:focus {
	outline: rgba(0, 0, 0, 0.2) outset 3px;
}
#with_border {
	border-collapse: collapse;
}
td {
	padding: 20px;
}
#with_border td {
	border: 1px solid #999;
	text-align: center;
}
#with_border td input {
	border: none;
	background: none;
	width: 100%;
	height: 100%;
	padding: 10px;
	outline: none;
}
.feedback {
	width: 100%;
	height: 50px;
	display: inline-block;
	clear: float;
}
.feedback_txt {
	height: 50px;
	border: 1px dashed #333;
	display: inline-block;
	font-size: 12px;
	font-weight: normal;
	color: #333;
	padding: 10px;
	background-image: -webkit-linear-gradient(top, #F9F3CA, #ffffff);
	-moz-border-radius: 5px;
	border-radius: 5px;
}
#lesson_select {
	position: absolute;
	top: 20px;
	left: -15px;
	width: 130px;
	height: 30px;
	border: 1px solid red;
}