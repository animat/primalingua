}
.nav_option:hover {
	background: rgba(0, 0, 0, 0.05);
}
#workspace {
	width: 100%;
	height: 100%;
	position: relative;
	background: #E6EDF7 url(<%= image_path 'workspace/workbook_shadow.png' %>) no-repeat center top;
	border-top: 1px solid #fff;
}
.workspace_button {
	background: url('/assets/workspace/workspace_button_bg.png') no-repeat center;
	padding-top: 10px;
	text-align: center;
	width: 130px;
	height: 33px;
	color: #8F75AC;
	padding-top: 12px;
	font-family: Arial Rounded MT Bold, Nunito;
	display: inline-block;
}
#flash_notice {
	width: 30%;
	height: 50px;
	background: rgba(0, 0, 0, 0.65);
	position: absolute;
	left: 50%;
	margin-left: -15%;
	top: 0;
	z-index: 2;
	-webkit-border-bottom-right-radius: 6px;
	-webkit-border-bottom-left-radius: 6px;
	-moz-border-radius-bottomright: 6px;
	-moz-border-radius-bottomleft: 6px;
	border-bottom-right-radius: 6px;
	border-bottom-left-radius: 6px;
	text-align: center;
	color: #06C62C;
	font-family: Arial Rounded MT Bold, Nunito;
	padding-top: 25px;
}
.full_width {
	max-width: 100%;
}
.half_width {
	max-width: 50%;
}
.float_left {
	float: left;
}
.float_right {
	float: right;
}
.clear_float {
	clear: both;
}
/****************************************
			Planning view
****************************************/
#lessonplan {
	max-width: 50%;
	min-width: 400px;
	float: left;
	position: relative;
	height: 100%;
	overflow-y:scroll;
}
#lessons {
	margin: 20px;
	background: #fff url(<%= image_path 'workspace/lesson_plan_bg.png' %>) no-repeat top left;
	box-shadow: 0px 0px 20px 4px rgba(0, 0, 0, 0.2);
	-moz-border-radius: 3px;
	border-radius: 3px;
	padding: 20px;
}
#lessonplans {
	margin-right: 50px;
	margin-left: 50px;
	margin-top: 60px;
	font-family: nunito;
	color: #444;
}
#lessonplans #unitnumber {
	position: absolute;
	top: 65px;
	right: 40px;
	color: #222;
}
#lessonplans h2 {
	color: #333;
	margin: 0px;
	font-family: Helvetica;
}
#lessonplans h3 {
	color: #333;
	text-decoration: underline;
	margin: 0px;
	font-family: Helvetica;
}
#lessonplans ul {
	color: #555;
}
#lessonplans h4 {
	color: #2b2b2b;
}
#lessonplans .items {
	font-size: .8em;
}
#lessonplans .highlight {
	margin: 10px;
	padding: 10px;
	background: #F7F2D5;
}
#lessonplans .subtitle {
	font-size: 1em;
	display: block;
	color: purple;
}
/****************************************
			Grading view
****************************************/
#selectMenu {
	position: absolute;
	right: 40px;
	top: 40px;
}
#student_workbook {
	margin: 0px 20px 20px 20px;
