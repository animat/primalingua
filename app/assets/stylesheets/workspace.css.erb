body {
	margin: 0px;
	background: #E6EDF7;
}
#head {
	width: 100%;
	background: #ACA0DE url(<%= image_path 'head_shadow.png' %>) repeat-x bottom;
	height: 60px;
	border-bottom: 2px solid #9E81CB;
}
a {
	text-decoration: none;
}
#head_student {
	width: 100%;
	background: #ACA0DE url(<%= image_path 'head_shadow.png' %>) repeat-x bottom;
	height: 195px;
	border-bottom: 2px solid #9E81CB;
}
#topnav {
	width: 100%;
	height: 60px;
	position: absolute;
	top: 0px;
}
#logo {
	width: 375px;
	height: 55px;
	background: url(<%= image_path 'logo.png' %>) no-repeat center;
	position: absolute;
	top: 0px;
	left: 0px;
}
#buttons {
	position: absolute;
	top: 4px;
	right: 10px;
}
#nav {
	width: 320px;
	height: 60px;
	margin: 0 auto;
}
.nav_option {
	position: relative;
	z-index: 2;
	width: 100px;
	padding-top: 20px;
	height: 40px;
	vertical-align: center;
