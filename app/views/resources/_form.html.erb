<%= form_for(@resource) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content_type %><br />
    <%= f.select :content_type, %w[link term vocab activity game] %>
  </div>
  <div class="field">
    <%= f.label :primary %><br />
    <%= f.text_area :primary, :cols => 50, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :secondary %><br />
    <%= f.text_area :secondary, :cols => 50, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :path_to_thumbnail %><br />
    <%= f.text_area :path_to_thumbnail, :cols => 50, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 50, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :unit_id %><br />
    <%= f.select :unit_id, Unit.order(:number).all.collect{|u| [u.full_title, u.id]} %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
