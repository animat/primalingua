<h2><%= "Resources for Unit #{@lesson.unit.number}" %></h2>

<table id="resource_container">
	<tr id="resource_header">
		<% Resource.content_types.each do |ct| %>
			<td><h2><%= ct %></h2></td>
		<% end %>
	</tr>
	<tr>
		<% Resource.content_types.each do |ct| %>
			<td class="resource_section">
				<div class="resource_pad">
					<% resources.map{|r| (r.content_type == ct) ? r : nil}.each do |r| %>
						<% unless r.nil? %>
							<li><%= r.primary %></li>
						<% end %>
					<% end %>
				</div>
			</td>	
		<% end %>
	</tr>
</table>