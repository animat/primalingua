<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :lesson, "This section is currently on..." %><br />
    <%= collection_select :section, :lesson_id, Lesson.where(completed: true), :id, :full_title %>
  </div>
  <% if controller.action_name == "edit" %>
	  <p><%= link_to "Click here to archive students no longer in this class", section_archive_students_path(@section) %></p>
  <% end %>
  <br />
  <div class="actions">
    <%= f.hidden_field :teacher_id, :value => @teacher.id %>
    <%= f.submit %> or <%= link_to 'cancel', :back %>
  </div>
<% end %>
